<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".WayfareApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/wayfare_logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/wayfare_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Wayfare">
        <activity
            android:name=".presentation.activities.SignUpActivity"
            android:exported="false" />
        <!-- OTP Verification Activity -->
        <activity
            android:name=".presentation.activities.OtpVerificationActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Wayfare.NoActionBar"
            android:windowSoftInputMode="adjustResize" />
        <!-- Splash Screen Activity - App Entry Point -->
        <activity
            android:name=".presentation.activities.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Wayfare.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Login Activity -->
        <activity
            android:name=".presentation.activities.LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Wayfare.NoActionBar"
            android:windowSoftInputMode="adjustResize" /> <!-- Main Activity -->
        <activity
            android:name=".presentation.activities.MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.Wayfare" />
        
        <!-- Profile Related Activities -->
        <activity
            android:name=".presentation.activities.EditProfileActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Wayfare.NoActionBar"
            android:windowSoftInputMode="adjustResize" />
        
        <activity
            android:name=".presentation.activities.ChangePasswordActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Wayfare.NoActionBar"
            android:windowSoftInputMode="adjustResize" />
        
        <activity
            android:name=".presentation.activities.AccountSettingsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Wayfare.NoActionBar" />
    </application>

</manifest>