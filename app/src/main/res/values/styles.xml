<resources>
    <style name="MyCustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">56dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyCustomButton.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">56dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyCustomButton.Filled" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">56dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- styles.xml -->
    <style name="MyCustomButton.Large" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">56dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/button_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">4dp</item>
        <item name="rippleColor">@color/white</item>
    </style>
</resources>