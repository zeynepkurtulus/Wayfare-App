<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Main App Theme -->
    <style name="Theme.Wayfare" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:fontFamily">@font/inter_24pt_regular</item>
    </style>
    
    <!-- Splash Screen Theme - Full immersive experience -->
    <style name="Theme.Wayfare.NoActionBar" parent="Theme.Wayfare">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
</resources>