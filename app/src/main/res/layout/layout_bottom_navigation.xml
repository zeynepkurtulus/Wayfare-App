<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomNavigation"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/bottom_nav_background"
    android:elevation="12dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingTop="12dp"
    android:paddingBottom="8dp">

    <!-- Home Tab -->
    <LinearLayout
        android:id="@+id/homeTab"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_home"
            app:tint="@color/primary" />

        <TextView
            android:id="@+id/homeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="@color/primary"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Calendar Tab -->
    <LinearLayout
        android:id="@+id/calendarTab"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/calendarIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_calendar"
            app:tint="@color/nav_icon_inactive" />

        <TextView
            android:id="@+id/calendarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calendar"
            android:textColor="@color/nav_text_inactive"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Search Tab (Center - Blue FAB) -->
    <LinearLayout
        android:id="@+id/searchTab"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="?attr/selectableItemBackgroundBorderless">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_search"
            app:backgroundTint="@color/primary"
            app:tint="@android:color/white"
            app:elevation="4dp"
            app:borderWidth="0dp"
            app:fabSize="mini" />

        <TextView
            android:id="@+id/searchText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textColor="@color/nav_text_inactive"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Trip Maker Tab -->
    <LinearLayout
        android:id="@+id/tripMakerTab"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/tripMakerIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_plus"
            app:tint="@color/nav_icon_inactive" />

        <TextView
            android:id="@+id/tripMakerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trip Maker"
            android:textColor="@color/nav_text_inactive"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Profile Tab -->
    <LinearLayout
        android:id="@+id/profileTab"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_profile"
            app:tint="@color/nav_icon_inactive" />

        <TextView
            android:id="@+id/profileText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="@color/nav_text_inactive"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</LinearLayout>