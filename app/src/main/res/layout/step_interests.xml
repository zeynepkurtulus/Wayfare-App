<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="32dp">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="20dp">

        <!-- Welcome Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to the"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trip "
                android:textColor="@color/primary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maker"
                android:textColor="@color/primary"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jane !"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's Plan your Trip !"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:layout_marginBottom="24dp" />

        <!-- Main Question -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What are your interests ?"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center" />

    </LinearLayout>

    <!-- Search Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxStrokeColor="@color/primary"
        app:hintTextColor="@color/primary"
        android:hint="Search interests...">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/interestsSearchEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="16sp"
            android:padding="16dp"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="12dp"
            android:drawableTint="@color/text_hint" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Interests Categories -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🎯 Select Your Interests"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Scrollable Categories Container -->
                            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Row 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipMuseums"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🏛️ Museums and Art Galleries"
                            android:textSize="12sp"
                            android:layout_marginEnd="8dp"
                            app:chipBackgroundColor="@color/grey_300" />

                    </LinearLayout>

                    <!-- Row 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipFoodDrink"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🍽️ Food and Drink"
                            android:textSize="12sp"
                            android:layout_marginEnd="8dp"
                            android:textColor="@color/white"
                            android:checked="true"
                            app:chipBackgroundColor="@color/primary_blue_700" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipOutdoors"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🌲 Outdoors"
                            android:textSize="12sp"
                            android:layout_marginEnd="8dp"
                            app:chipBackgroundColor="@color/grey_300" />

                    </LinearLayout>

                    <!-- Row 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipHiddenGems"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="💎 Hidden Gems"
                            android:textSize="12sp"
                            android:layout_marginEnd="8dp"
                            android:checked="true"
                            android:textColor="@color/white"
                            app:chipBackgroundColor="@color/primary_blue_700" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipFamilyFriendly"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="👨‍👩‍👧‍👦 Family Friendly"
                            android:textSize="12sp"
                            android:layout_marginEnd="8dp"
                            app:chipBackgroundColor="@color/grey_300" />

                    </LinearLayout>

                    <!-- Row 4 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipNightlife"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🌃 Nightlife"
                            android:textSize="12sp"
                            android:layout_marginEnd="8dp"
                            app:chipBackgroundColor="@color/grey_300" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipShopping"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🛍️ Shopping"
                            android:textSize="12sp"
                            android:layout_marginEnd="8dp"
                            app:chipBackgroundColor="@color/grey_300" />

                    </LinearLayout>

                    <!-- Row 5 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipHistorical"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🏰 Historical Sites"
                            android:textSize="12sp"
                            android:layout_marginEnd="8dp"
                            app:chipBackgroundColor="@color/grey_300" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipBeaches"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🏖️ Beaches"
                            android:textSize="12sp"
                            android:layout_marginEnd="8dp"
                            app:chipBackgroundColor="@color/grey_300" />

                    </LinearLayout>

                    <!-- Row 6 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipAdventure"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🏔️ Adventure Sports"
                            android:textSize="12sp"
                            android:layout_marginEnd="8dp"
                            app:chipBackgroundColor="@color/grey_300" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipWellness"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🧘 Wellness &amp; Spa"
                            android:textSize="12sp"
                            android:layout_marginEnd="8dp"
                            app:chipBackgroundColor="@color/grey_300" />

                    </LinearLayout>

                    <!-- Row 7 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipArchitecture"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🏗️ Architecture"
                            android:textSize="12sp"
                            android:layout_marginEnd="8dp"
                            app:chipBackgroundColor="@color/grey_300" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipMusic"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🎵 Music and Theater"
                            android:textSize="12sp"
                            android:layout_marginEnd="8dp"
                            app:chipBackgroundColor="@color/grey_300" />

                    </LinearLayout>

                    <!-- Row 8 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipLocalCulture"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🎭 Local Culture"
                            android:textSize="12sp"
                            android:layout_marginEnd="8dp"
                            app:chipBackgroundColor="@color/grey_300" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipPhotography"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📸 Photography"
                            android:textSize="12sp"
                            android:layout_marginEnd="8dp"
                            app:chipBackgroundColor="@color/grey_300" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Navigation Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="24dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/interestsBackButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Back"
            style="@style/MyCustomButton.Outlined"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/interestsNextButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Next"
            style="@style/MyCustomButton.Filled"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>

</ScrollView>