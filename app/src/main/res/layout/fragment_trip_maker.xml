<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".presentation.fragments.TripMakerFragment">

    <!-- Progress Indicator -->
    <LinearLayout
        android:id="@+id/progressContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/stepText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 1 of 7"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginBottom="8dp" />

        <ProgressBar
            android:id="@+id/progressIndicator"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:progress="10"
            android:progressTint="@color/primary"
            android:progressBackgroundTint="@color/grey_200" />

    </LinearLayout>

    <!-- Main Content Container -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/progressContainer"
        app:layout_constraintBottom_toBottomOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Step 1: Welcome Screen -->
            <include
                android:id="@+id/welcomeStep"
                layout="@layout/step_welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible" />

            <!-- Step 2: Destination Selection -->
            <include
                android:id="@+id/destinationStep"
                layout="@layout/step_destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <!-- Step 3: Date Selection -->
            <include
                android:id="@+id/dateStep"
                layout="@layout/step_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <!-- Step 3: Category Selection -->
            <include
                android:id="@+id/categoryStep"
                layout="@layout/step_category_selection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <!-- Step 4: Season Selection -->
            <include
                android:id="@+id/seasonStep"
                layout="@layout/step_season_selection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <!-- Step 5: Loading -->
            <include
                android:id="@+id/loadingStep"
                layout="@layout/step_loading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <!-- Step 6: Results -->
            <include
                android:id="@+id/resultsStep"
                layout="@layout/step_results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </FrameLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>