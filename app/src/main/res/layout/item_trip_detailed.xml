<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Trip Image -->
        <ImageView
            android:id="@+id/tripImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_corners_8dp"
            android:backgroundTint="@color/grey_200"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_map_placeholder" />

        <!-- Privacy Indicator -->
        <ImageView
            android:id="@+id/privacyIndicator"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="4dp"
            android:src="@drawable/ic_lock_private"
            android:contentDescription="Privacy indicator"
            app:tint="@color/text_hint"
            app:layout_constraintTop_toTopOf="@id/tripImageView"
            app:layout_constraintEnd_toEndOf="@id/tripImageView" />

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/tripImageView"
            app:layout_constraintEnd_toStartOf="@id/statusContainer"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Trip Title -->
            <TextView
                android:id="@+id/tripTitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Amazing Istanbul Adventure" />

            <!-- Destination -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_location"
                    app:tint="@color/text_hint"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/destinationText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Istanbul, Turkey" />

            </LinearLayout>

            <!-- Trip Dates -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/text_hint"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/datesText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Aug 15 - Aug 22, 2024" />

            </LinearLayout>

            <!-- Trip Duration -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_clock"
                    app:tint="@color/text_hint"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/durationText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:maxLines="1"
                    tools:text="7 days" />

            </LinearLayout>

        </LinearLayout>

        <!-- Status Container -->
        <LinearLayout
            android:id="@+id/statusContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Status Badge -->
            <com.google.android.material.chip.Chip
                android:id="@+id/statusChip"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:textSize="10sp"
                app:chipMinHeight="24dp"
                app:chipBackgroundColor="@color/primary_blue_50"
                android:textColor="@color/primary_blue_700"
                tools:text="Upcoming" />

            <!-- Download Status Indicator -->
            <ImageView
                android:id="@+id/downloadStatusIndicator"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_offline"
                app:tint="@color/secondary_green"
                android:contentDescription="Downloaded for offline"
                android:visibility="gone"
                android:layout_marginTop="4dp" />

            <!-- Action Menu Button -->
            <ImageButton
                android:id="@+id/menuButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_more_vert"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/text_hint"
                android:contentDescription="Trip options"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Budget and Category Info (Bottom Section) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tripImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Budget Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_wallet"
                    app:tint="@color/text_hint"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/budgetText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp"
                    tools:text="Luxury" />

            </LinearLayout>

            <!-- Category -->
            <com.google.android.material.chip.Chip
                android:id="@+id/categoryChip"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="10sp"
                app:chipMinHeight="20dp"
                app:chipBackgroundColor="@color/accent_light"
                android:textColor="@color/text_secondary"
                tools:text="City Break" />

            <!-- Progress Indicator (for ongoing trips) -->
            <ProgressBar
                android:id="@+id/progressIndicator"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="8dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>