<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="32dp">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="20dp">

        <!-- Icon -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/circle_background"
            android:backgroundTint="@color/success_green"
            android:alpha="0.1"
            android:padding="20dp"
            android:src="@drawable/ic_place_placeholder"
            app:tint="@color/success_green" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Must-Visit Places"
            android:textColor="@color/text_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search and select places you definitely want to visit"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginBottom="24dp" />

    </LinearLayout>

    <!-- Search Section -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Category Filter -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filter by Category"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipAllCategories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All"
                        android:checkable="true"
                        android:checked="true"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipCulturalSites"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cultural Sites"
                        android:checkable="true"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipMuseums"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Museums"
                        android:checkable="true"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipEntertainment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Entertainment"
                        android:checkable="true"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipNature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nature"
                        android:checkable="true"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:layout_marginEnd="8dp" />

                </LinearLayout>

            </HorizontalScrollView>

            <!-- Search Input -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:boxStrokeColor="@color/primary"
                    app:hintTextColor="@color/primary"
                    app:endIconMode="clear_text"
                    android:hint="Search must-visit places...">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/mustVisitSearchEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Loading Progress Bar -->
                <ProgressBar
                    android:id="@+id/mustVisitSearchLoadingProgressBar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="16dp"
                    android:indeterminateTint="@color/primary"
                    android:visibility="gone" />

            </FrameLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Search Results -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mustVisitSuggestionsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:nestedScrollingEnabled="false"
        android:visibility="gone" />

    <!-- Selected Places Section -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/selectedPlacesCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="32dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selected Must-Visit Places"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/selectedPlacesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Navigation Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="24dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mustVisitBackButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Back"
            android:textColor="@color/primary"
            app:strokeColor="@color/primary"
            app:cornerRadius="28dp"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mustVisitNextButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Continue"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/primary"
            app:cornerRadius="28dp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>

</ScrollView>